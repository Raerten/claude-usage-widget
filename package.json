{
  "name": "claude-usage-widget",
  "version": "2.3.0",
  "description": "Desktop widget for Claude.ai usage monitoring",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "build:win": "electron-vite build && electron-builder --win --config electron-builder.yml",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json",
    "typecheck": "yarn typecheck:node && yarn typecheck:web"
  },
  "keywords": [
    "claude",
    "usage",
    "widget",
    "electron"
  ],
  "author": "Dmitry Shulgachik",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "electron": "41.0.0-beta.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^3.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "electron-store": "^8.2.0"
  },
  "packageManager": "yarn@4.12.0"
}
